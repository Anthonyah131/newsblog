{
    "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
    "version": "0.2",
    "language": "en",
    "dictionaryDefinitions": [
        {
            "name": "project-words",
            "path": "./project-words.txt",
            "addWords": true
        }
    ],
    "dictionaries": [
        "project-words"
    ],
    "include": [
        "**/*.{ts,tsx,js,jsx}"
    ],
    "ignorePaths": [
        "node_modules",
        ".next",
        "public",
        "project-words.txt" ,
        "README.md",
        "tailwind.config.js"
    ]
}